@using Ast.Models
@{
    Layout = "~/Views/Shared/_WebLayout.cshtml";
    Hc_ArticleList article = ViewBag.detail as Hc_ArticleList;
    var articleList = ViewBag.nav as List<Hc_ArticleList>;
}
<style>
    .news-oper a {
        /* display: inline-block; */
        /* text-indent: -999em; */
        /* height: 56px; */
        width: 56px;
        /* margin: 5px; */
        opacity: 0.75;
        display: block;
    }
    .news-info{
        border:0 ;
    }
    #nav-container {
        border-bottom: 1px solid #eee;
    }
    .news-oper p {
        width: 767px;
        margin-left: 3rem;
    }
    .news-title {
        padding-bottom: .2em;
        line-height: 1;
        font-size: 16px;
        font-weight: 700;
        color: #000;
    }
    .tb-gallery img {
        border: 1px solid #eee;
    }
    .news-title {
        margin: 50px 0 5px;
    }
    .price {
        background-color: #e9e9e9;
        margin: 15px 0;
        height:40px;
        padding:0 10px
    }
    .detail-head {
        height: 48px;
        width: 100%;
        border-bottom: 1px solid #e4393c;
        line-height:48px;
        background-color:#f7f7f7;
    }
    .detail-btn {
        width: 90px;
        text-align: center;
        color: #FF0036;
        background-color: #e4393c;
        color:#fff;
    }
    .mb50{
        max-width:1050px;
    }
    .layui-breadcrumb a:hover {
        color: #e4393c !important;
    }
</style>
<body>
    <div class="news-body" style="padding-top:90px;">
        <div class="breadcrumb" style="max-width:1050px;margin:0 auto;margin-top:30px">
            <span class="layui-breadcrumb" style="visibility: visible" lay-separator=">">
                <a href="/Home">首页</a>
                <a href="/home/about">关于</a>
                <a><cite>@article.Title</cite></a>
            </span>
        </div>
        <div class="mb50">
            <div class="tb-gallery">
                <img src="@article.TopImg" width="300" />
            </div>
            <div class="description" style="margin-left:320px">
                <div style="padding:0 12px">
                    <h2 class="news-title">@article.Title</h2>
                    <h3 style="font-size:16px;">@article.Brief</h3>
                </div>
                <div class="price"><div style="float:left;line-height:40px">价格</div><span style="font-size:20px;color:#FF0036;font-weight:bold;margin-left:30px;line-height:40px">¥ @article.MarkId</span></div>
                <div class="m-hide" style="height:25px;padding:0 12px">
                    <p>
                        <span>@article.Editor</span>
                    </p>
                </div>
                <div class="news-info m-hide" style="position:relative">
                    <a href="#detail">
                        <div style="background-color: #fecb30;display: inline-block;height: 60px;line-height: 60px;font-size: 20px;color: #895a13;vertical-align: top;min-width: 182px;text-align: center;position:absolute;bottom:15px">
                            查看详情
                        </div>
                    </a>
                </div>
            </div>
            <div class="recommend m-hide" style="width:300px;float:left;border:1px solid #eee">
                <div class="detail-head">
                    <div class="detail-btn">推荐</div>
                </div>
                @if (articleList != null)
                {
                    foreach (var item in articleList)
                    {
                        if (item.Id != article.Id)
                        {
                            <div style="width:300px;margin:30px 0">
                                <a href="/Home/ProductDetail?id=@item.Id">
                                    <img src="@item.TopImg" style="max-width:200px;margin: 0 auto;display: block;margin-bottom:10px" />
                                    <div style="text-align:center">
                                        <p>@item.Title</p>
                                        @*<p>￥@item.MarkId</p>
                                        <p style="color:#989898">@item.Editor</p>*@
                                    </div>
                                </a>
                            </div>
                        }
                    }
                }
            </div>
            <div class="detail-content" style="width:740px;padding: 0 10px;">
                <div class="detail-head">
                    <div class="detail-btn" id="detail">商品详情</div>
                </div>
                <div class="news-body" style="min-height:28rem;">
                    @Html.Raw(article.HcContent)
                </div>
            </div>
            <div style="clear:both">
            </div>
            <div class="recommend p-hide" style="width:100%;padding:0 10px">
                <div class="detail-head" style="height:28px;line-height:28px">
                    <div class="detail-btn">推荐</div>
                </div>
                @if (articleList != null)
                {
                    foreach (var item in articleList)
                    {
                        if (item.Id != article.Id)
                        {
                            <div style="width:50%;float:left;margin:20px 0">
                                <a href="/Home/ProductDetail?id=@item.Id">
                                    <img src="@item.TopImg" style="max-width:80px;float:left" />
                                    <div style="height:100px;">
                                        <p style="color:#989898">@item.Title</p>
                                        <p>￥@item.MarkId</p>
                                        <p style="color:#989898">@item.Editor</p>
                                    </div>
                                </a>
                            </div>
                        }
                    }
                    <div style="clear:both">
                    </div>
                }
            </div>
        </div>
    </div>
</body>
