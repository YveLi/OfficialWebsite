@{
    Layout = "~/Views/Shared/_WebLayout.cshtml";
    var prolist = ViewBag.prolist as IList<Ast.Models.Hc_ArticleList>;
    var mymenu = ViewBag.mymenu as Ast.Models.Hc_WebMenu;
}
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <style>
        .product {
            padding-bottom: 3rem;
            border-bottom: 1px solid #eee;
        }

        .detail {
            text-align: left;
        }

        .img-container-new {
            float: left;
            margin-right: 1rem;
        }

        .product .go-product {
            text-align: right;
            color: #13c173;
        }
        h3{
            font-size:35px;
        }
    </style>
</head>
<body>
    <!-- carousel -->
    <div class="banner">
        <div class="banner-table" style="background-image:url('@mymenu.Img');background-repeat: no-repeat;background-position: bottom;">
            <div class="banner-table-cell" id="to-table-cell">
                <h1>@mymenu.ThemeName</h1>
                <h2>@mymenu.EnThemeName</h2>
            </div>
        </div>
    </div>
    <div class="company-about clearfix">
        @foreach (var item in prolist)
        {
            <div class="container mt50 mb50 about-info">
                <div class="col-md-12 product">
                    <a href="/Home/ArticleDetail?id=@item.Id">
                        <div class="img-container-new" style="background-image: url(@item.TopImg);display:block;background-repeat:no-repeat;background-position:center"></div>
                    </a>
                    <a href="/Home/ArticleDetail?id=@item.Id">
                        <div style="padding-top:2rem;text-align:left">
                            <h3 style="color:#13c173">@item.Title</h3>
                            <p style="color:#aaa;">@item.AddTime.ToString("yyyy / MM /  dd")</p>
                            <br />
                            <p style="font-size:1.8rem;">@item.Brief</p>
                            <p class="go-product bto4" style="color: #13c173;">查看详情 ></p>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
    @section js{
        <script>
            $(document).ready(function () {
                if ($(window).width() < 768) {
                    document.getElementById("nav-container").style.backgroundColor = "transparent";
                    document.getElementById("nav-wrap").style.backgroundImage = "url(../../Content/img/sangang.png)";
                    document.getElementById("to-table-cell").style.padding = "0 50px";
                }
            });
        </script>
    }
</body>
</html>
